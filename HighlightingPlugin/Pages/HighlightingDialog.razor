
    <Row ItemsPerRow="ItemsPerRow.One" RowType="RowType.FormRow">
        <Select TValue="string" Items="@Codes" ShowLabel="true" DisplayText="选择语言" @bind-Value="@SelectedValue"></Select>
        <Textarea @bind-Value="@CodeValue" DisplayText="代码段" ShowLabel="true"></Textarea>
    </Row>
    
@code
{
    private IEnumerable<SelectedItem> Codes = typeof(Code).ToSelectList();

    public string SelectedValue { get; set; }

    public string CodeValue { get; set; }
}
