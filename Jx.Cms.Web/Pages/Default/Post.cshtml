@page "{id:int}"
@using Jx.Cms.Entities.Article
@model Jx.Cms.Web.Pages.Default.Post

@Html.Raw(Model.Article.Header)
<!-- Page Header -->
    <header class="masthead" style="background-image: url('/Default/img/post-bg.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">
              <h1>@Model.Article.Body.Title</h1>
              <span class="meta">
                <a href="#">@Model.Article.Body.Author</a>
                @Model.Article.Body.PublishTime.ToString("yyyy-MM-dd hh:mm:ss")</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
<article>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        @Html.Raw(Model.Article.Body.Content)
      </div>
    </div>
  </div>
</article>
<div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <small class="text-muted">标签：@if(Model.Article.Body.Labels != null)
                                     {
                                       foreach (var label in Model.Article.Body.Labels)
                                       {
                                         <a href="/Label/@label.Id"><span class="label">@label.Name</span></a>
                                       }
                                     }</small>
      </div>
    </div>
  </div>
<div class="clearfix">
  @if (Model.PrevArticle != null)
  {
    <a class="btn btn-primary float-left" href="/Post/@Model.PrevArticle.Id">&larr; @Model.PrevArticle.Title</a>
  }
  else
  {
    <button class="btn btn-primary float-left">已经是最新一篇啦</button>
  }
  
  @if (Model.NextArticle != null)
    {
      <a class="btn btn-primary float-right" href="/Post/@Model.NextArticle.Id">@Model.NextArticle.Title &rarr;</a>
    }
    else
    {
      <button class="btn btn-primary float-right">已经是最后一篇啦</button>
    }
</div>

@Html.Raw(Model.Article.Footer)