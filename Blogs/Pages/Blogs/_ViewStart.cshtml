@using Jx.Cms.Common.Utils
@using Jx.Cms.DbContext.Service.Both
@inject ISettingsService SettingsService
@inject IMenuService MenuService
@{
    Layout = "Shared/_Layout";
    ViewBag.type = ViewContext.RouteData.Values["controller"]?.ToString();
    ViewBag.settings = SettingsService.GetValuesByNames(SettingsConstants.GetAllSystemKey());
    ViewBag.blogs = SettingsService.GetAllValues("Blogs");
}